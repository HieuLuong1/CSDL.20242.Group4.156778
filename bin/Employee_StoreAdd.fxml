<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Employee_StoreAddController">
    <children>
        <VBox alignment="TOP_LEFT" spacing="15" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="20">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Thêm sản phẩm mới" />

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Tên sản phẩm:" />
                        <TextField fx:id="productNameField" promptText="Nhập tên sản phẩm" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Loại sản phẩm:" />
                        <TextField fx:id="cateField" promptText="Nhập loại sản phẩm" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Số lượng:" />
                        <TextField fx:id="quantityField" promptText="Nhập số lượng" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Đơn giá (VNĐ):" />
                        <TextField fx:id="priceField" promptText="Nhập đơn giá" />
                    </children>
                </HBox>
            <HBox spacing="10">
               <children>
                  <Label minWidth="120" text="Đơn vị:" />
                  <TextField fx:id="unitField" promptText="Nhập đơn vị" />
               </children>
            </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Nhà cung cấp:" />
                        <TextField fx:id="supField" promptText="Nhập tên nhà cung cấp" />
                    </children>
                </HBox>

                <HBox spacing="15">
                    <children>
                        <Button fx:id="saveProductBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Lưu" />
                        <Button fx:id="cancelBtn" text="Hủy" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>