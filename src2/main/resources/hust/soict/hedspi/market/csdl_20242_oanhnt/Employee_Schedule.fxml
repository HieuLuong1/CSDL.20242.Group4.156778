<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.hedspi.market.csdl_20242_oanhnt.Employee_ScheduleController" prefHeight="500.0" prefWidth="800.0">
    <children>
        <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>

                <!-- Chọn tháng/năm -->
                <HBox spacing="10">
                    <Label text="Tháng:" />
                    <ComboBox fx:id="monthCombo" prefWidth="100"/>

                    <Label text="Năm:" />
                    <ComboBox fx:id="yearCombo" prefWidth="100"/>

                    <Button text="Xem lịch" onAction="#handleViewSchedule"/>
                </HBox>

                <!-- Tiêu đề -->
                <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lịch làm việc của bạn - Tháng 05/2025" />

                <!-- Tổng kết số buổi -->
                <HBox spacing="20">
                    <Label fx:id="presentLabel" text="Có mặt: 0 buổi" />
                    <Label fx:id="lateLabel" text="Đi muộn: 0 buổi" />
                    <Label fx:id="absentLabel" text="Vắng: 0 buổi" />
                </HBox>

                <Label fx:id="totalSalaryLabel" text="Lương tạm tính: 0 VND" style="-fx-font-weight: bold;" />

                <!-- Nút hiển thị chi tiết -->
                <Button fx:id="btnShowDetail" text="Xem chi tiết từng ngày" onAction="#handleShowDetail" />

                <!-- Bảng lịch -->
                <TableView fx:id="scheduleTable" prefHeight="350" visible="false">
                    <columns>
                        <TableColumn fx:id="colDate" text="Ngày" prefWidth="100" />
                        <TableColumn fx:id="colShift" text="Ca làm" prefWidth="80" />
                        <TableColumn fx:id="colStartTime" text="Bắt đầu" prefWidth="90" />
                        <TableColumn fx:id="colEndTime" text="Kết thúc" prefWidth="90" />
                        <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100" />
                        <TableColumn fx:id="colNote" text="Ghi chú" prefWidth="170" />
                        <TableColumn fx:id="colSalary" text="Tiền lương" prefWidth="100" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
