<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Employee_InfoController">
    <children>
        <VBox spacing="15" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="30">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Thông tin nhân viên" />

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Họ và tên:" />
                        <Label fx:id="fullNameLabel" text="ABC" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Mã nhân viên:" />
                        <Label fx:id="employeeIdLabel" text="NV001" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Ngày sinh:" />
                        <Label fx:id="dobLabel" text="01/01/2000" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Giới tính:" />
                        <Label fx:id="genderLabel" text="Nam" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Email:" />
                        <Label fx:id="emailLabel" text="abc@gmail.com" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Số điện thoại:" />
                        <Label fx:id="phoneLabel" text="0123456789" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Địa chỉ tạm trú:" />
                        <Label fx:id="addressLabel" text="Hà Nội" />
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Label minWidth="120" text="Mã CCCD:" />
                        <Label fx:id="idCardLabel" text="012345678901" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>